<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style src="../../client/resources/css/global.css" type="com.fave100.client.resources.css.GlobalStyle">		
		.generalButton {	
			cursor: pointer;
			border-radius: 4px;
			color: #FFF;			
			box-shadow: 0 1px 0 rgba(255,255,255,0.2) inset;
			padding: 6px;
			text-transform: uppercase;
			text-shadow: #777 0 1px 0;
			font-size: 15px;
		}		
		
		.generalButton:hover {
			cursor: pointer;
			text-decoration: none;
			border: 1px solid #555;
		}
		
		.buttonImageContainer {
			height: 100%;
			width: 30px;
			border-right: 1px solid #d5d5d5;
			display: inline-block;
		}
		
		.buttonText {
			position: relative;
			top: -10%;
			margin-left: 10px;
		}
		
		@defmixin gradient(START_COLOR, END_COLOR) {
		  background-color: START_COLOR; /* Old browsers */
		  /* @alternate */ background: -moz-linear-gradient(top,  START_COLOR 0%, END_COLOR 100%); /* FF3.6+ */
		  /* @alternate */ background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, START_COLOR), color-stop(100%, END_COLOR)); /* Chrome,Safari4+ */
		  /* @alternate */ background: -webkit-linear-gradient(top,  START_COLOR 0%, END_COLOR 100%); /* Chrome10+,Safari5.1+ */
		  /* @alternate */ background: -o-linear-gradient(top,  START_COLOR 0%, END_COLOR 100%); /* Opera 11.10+ */
		  /* @alternate */ background: -ms-linear-gradient(top,  START_COLOR 0%, END_COLOR 100%); /* IE10+ */
		  background: linear-gradient(to bottom,  START_COLOR 0%, END_COLOR 100%); /* W3C */
		  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='START_COLOR', endColorstr='END_COLOR',GradientType=0 )l /* IE6-9 */
		}
		
		@external googleSocialLogo;
		.googleSocialLogo {
			border: 1px solid #9E1919;
			@mixin gradient(#f2615c, #d13429);
		}		
		
		.googleSocialLogo:hover {
			@mixin gradient(#f2615c, #ce0c02);		
		}
		
		@external twitterSocialLogo;
		.twitterSocialLogo {			
			border: 1px solid #02A1DB;
			@mixin gradient(#72cff9, #22b5f9);	
		}		
		
		.twitterSocialLogo:hover {
			@mixin gradient(#72cff9, #02adf7);
		}
		
		@external facebookSocialLogo;
		.facebookSocialLogo {	
			border: 1px solid #1D3C84;
			@mixin gradient(#6377aa, #3756ad);
		}		
	
		.facebookSocialLogo:hover {
			@mixin gradient(#6377aa, #2549aa);
		}
	</ui:style>
	
	<g:FocusPanel ui:field="focusPanel">
		<g:HTMLPanel ui:field="buttonContainer" ui:styleName="{style.generalButton}">
			<span class="{style.buttonImageContainer}">
				<g:Image ui:field="imgIcon"></g:Image>
			</span>
			<g:InlineLabel ui:field="buttonLabel" ui:styleName="{style.buttonText}"></g:InlineLabel>
		</g:HTMLPanel>
	</g:FocusPanel>
	
</ui:UiBinder> 